{% extends 'admin/base_admin.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>
    <div>
        {%  if article.image !='' %}
<img src="{{ article.image }}" height="200px" width="auto" alt="image de l'article">
        {% endif %}
    </div>
    <table class="table">
        <tbody>
        <tr>
            <th>Titre</th>
            <td>{{ article.titre }}</td>
        </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('admin/article/_delete_form.html.twig') }}
{% endblock %}
